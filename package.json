{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "deploy": "fly deploy --remote-only",
    "dev": "remix dev",
    "start": "remix-serve build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write .",
    "typecheck": "tsc",
    "test:unit": "run-s test:unit:reset-db-dev test:unit:watch",
    "test:unit:ci": "run-s test:unit:reset-db test:unit:run",
    "test:unit:reset-db": "npx prisma migrate reset -f",
    "test:unit:reset-db-dev": "npx prisma db push --force-reset",
    "test:unit:watch": "vitest",
    "test:unit:run": "vitest run"
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "@remix-run/css-bundle": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.0",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=14"
  }
}
