{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx ./server/build-server.ts",
    "deploy": "fly deploy --remote-only",
    "dev": "MOCKS=true tsx ./server/index.ts",
    "dev:unmock": "tsx ./server/index.ts",
    "start": "NODE_ENV=production node ./server-build/index.js",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "check:write-unsafe": "biome check --write --unsafe .",
    "typecheck": "tsc",
    "test:unit": "vitest --ui",
    "test:unit:ci": "vitest run",
    "test:unit:reset-db": "npx prisma migrate reset -f",
    "test:unit:reset-db-dev": "npx prisma migrate reset -f",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"npx playwright test\"",
    "test:e2e:ui": "start-server-and-test dev http://localhost:3000 \"npx playwright test --ui --ui-host=0.0.0.0 --ui-port=8888\"",
    "validate": "run-s check typecheck test:unit:ci test:e2e"
  },
  "dependencies": {
    "@libsql/client": "^0.8.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/adapter-libsql": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/css-bundle": "2.15.0",
    "@remix-run/node": "2.15.0",
    "@remix-run/react": "2.15.0",
    "@remix-run/serve": "2.15.0",
    "@simplewebauthn/browser": "^11.0.0",
    "@simplewebauthn/server": "^11.0.0",
    "@types/express": "^5.0.0",
    "class-variance-authority": "^0.7.0",
    "close-with-grace": "^2.1.0",
    "clsx": "^2.1.1",
    "express": "^4.21.1",
    "isbot": "^5.1.17",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-auth": "^3.7.0",
    "remix-auth-google": "^2.0.0",
    "remix-auth-webauthn": "^0.3.4",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
