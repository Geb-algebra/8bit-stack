{
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "tsx ./server/build-server.ts",
    "deploy": "fly deploy --remote-only",
    "dev": "remix dev -c \"tsx --require ./mocks/index.ts ./server/index.ts\"",
    "start": "NODE_ENV=production node ./server-build/index.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write .",
    "typecheck": "tsc",
    "test:unit": "run-s test:unit:reset-db-dev test:unit:watch",
    "test:unit:ci": "run-s test:unit:reset-db test:unit:run",
    "test:unit:reset-db": "npx prisma migrate reset -f",
    "test:unit:reset-db-dev": "npx prisma db push --force-reset",
    "test:unit:watch": "vitest",
    "test:unit:run": "vitest run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"npx playwright test\"",
    "test:e2e:ui": "start-server-and-test dev http://localhost:3000 \"npx playwright test --ui\"",
    "validate": "run-s format lint typecheck test:unit:ci test:e2e"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@remix-run/css-bundle": "^1.19.1",
    "@remix-run/node": "^1.19.1",
    "@remix-run/react": "^1.19.1",
    "@remix-run/serve": "^1.19.1",
    "@types/express": "^4.17.17",
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "isbot": "^3.6.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.5.0",
    "remix-auth-form": "^1.3.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.3.3",
    "@playwright/test": "^1.36.1",
    "@remix-run/dev": "^1.19.1",
    "@remix-run/eslint-config": "^1.19.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "esbuild": "^0.18.15",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "msw": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": "18"
  }
}
